---
import "../styles/header.css";
const commonCategories = ["Italian", "American", "Asian"]

---
<div class="landing-header">
    <div>
        <h1><a href="/">Tastebud</a></h1>
    </div>
    <div class="search-container">
        <div class="pseudo-input-container">
            <input 
                type="text" 
                name="search-input" 
                id="search-input"
                placeholder="What suits your taste today?"
            />
        </div>
        <div>
            {commonCategories.map((category) => ( 
                <a 
                    href="#" 
                    class="common-categories no-hover"
                >
                    {category}
                    <span class="hover-arrow">
                        <svg width="24" height="24">
                            <path d="M12 15.25a1 1 0 01-.7-.29l-4.58-4.5A1.011 1.011 0 018.12 9L12 12.85 15.88 9a1 1 0 111.4 1.42L12.7 15a1 1 0 01-.7.25z"></path>
                        </svg>
                    </span>
                </a>
            ))}
        </div>
    </div>
    <div>
        <a href="#" class="auth auth-login">Log In</a>
        <a href="#" class="auth auth-signup">Sign Up</a>
    </div>
</div>

